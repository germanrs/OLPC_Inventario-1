{# extend the parent tpl #}
{% extends 'layout.twig' %}

{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Login' %}

{# Page specific css #}
{% block pageCss %}
<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/login.css" />
{% endblock %}

{% block pageContent %}
{# Page specific content #}
<div class="login">
  	<h1>Login to the inventory</h1>
  	<form action="{{ path('auth.login') }}" method="post" {{ form_enctype(loginform) }} novalidate="novalidate">{# disable HTML5 formchecking #}
	
				
				<p>{{ form_widget(loginform.username, { 'attr' : { 'class': 'form-control','placeholder':'Username' }} ) }}</p>
				<p>{{ form_widget(loginform.password, { 'attr' : { 'class': 'form-control','placeholder':'Password' }} ) }}</p>
				<h2 class="text-danger">{{ form_errors(loginform.password)|striptags }}</h2><p class="submit"><input type="submit" name="commit" value="Login"></p>
				<input type="hidden" name="moduleAction" id="moduleAction" value="login" />
				{{ form_widget(loginform._token) }}
	</form>
	
</div>
{% endblock %}