{# extend the parent tpl #}
{% extends 'layout.twig' %}

{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Inventory' %}

{# Page specific css #}
{% block pageCss %}
	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/lijst.css" />
	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/places.css" />
{% endblock %}
{% block pageContent %}
	{# Page specific content #}
	{% include  'menu.twig' %}
<div class="menu-right">
	<div class="top-menu">
	<h1><a href="{{ path('Inventory.places') }}">Localidades</a></h1>
	
</div>
<div class="overvieuw">
	<div class="leftsort">
		<div class="clear"></div>
		<div class="label">
			Departamento
		</div>
		<div class="input">
			<input type="text" id="Departamento" list="json-datalistDepartamento" placeholder="Departamento...">
		</div>
		<datalist id="json-datalistDepartamento"></datalist>
		<div class="clear"></div>
		<div class="label">
			Ciudad
		</div>
		<div class="input">
			<input type="text" id="Ciudad" list="json-datalistCiudad" placeholder="Ciudad...">
		</div>
		<datalist id="json-datalistCiudad"></datalist>
		<div class="clear"></div>
		<div class="label">
			Escuela
		</div>
		<div class="input">
			<input type="text" id="Escuela" list="json-datalistEscuela" placeholder="Escuela...">
		</div>
		<datalist id="json-datalistEscuela"></datalist>
		<div class="clear"></div>
		<div class="label">
			Turno
		</div>
		<div class="input">
			<input type="text" id="Turno" list="json-datalistTurno" placeholder="Turno..">
		</div>
		<datalist id="json-datalistTurno"></datalist>
		<div class="clear"></div>
		<div class="label">
			grado
		</div>
		<div class="input">
			<input type="text" id="grade" list="json-datalistgrade" placeholder="perfil..">
		</div>
		<datalist id="json-datalistgrade"></datalist>
		<div class="clear"></div>
		<div class="label">
			Seccion
		</div>
		<div class="input">
			<input type="text" id="Seccion" list="json-datalistSeccion" placeholder="Seccion..">
		</div>
		<datalist id="json-datalistSeccion"></datalist>
		<div class="clear"></div>
	</div>
	<div class="righttable">
		<table class="responstable" id="table">
			<tr>
				<th>
					<input type="checkbox" id="chechallboxes" name="checkbox">   
				</th>
				<th>
					Nombre
				</th>
				<th>
					nombre de host del servidor
				</th>
				<th>
					Editar
				</th>
				<th>
					Eliminar
				</th> 
			</tr>
			
		</table>
		<a class="button" id="openAddModal"  role="button">Agregar</a>
	    <a class="button" id="DeleteSelectedplaces" role="button">Eliminar Seleccionados</a>
    </div>
		<div id="openModal" class="modalDialog">
			<div>
				<a id="CloseAddModal"  class="close">X</a>
				<h3 id="change">Agregar Localidade</h3>
				<div class="clear"></div>
				<div class="well clearfix" id="addUserForm">
					<form novalidate="novalidate" role="form">
						<fieldset>
							<div class="form-group">
								<div class="label">
									Nombre
								</div>
								<div class="input">
									<input type="text" name="login" id="Name" value="" placeholder="Name...">
								</div>
								<div class="clear"></div>
								<div class="label">
									Place type
								</div>
								<div class="input">
									<input type="text" id="place_type" list="json-datalistplace_type" placeholder="Place type...">
								</div>
								<datalist id="json-datalistplace_type"></datalist>
								<div class="clear"></div>
								<div class="label server_hostname">
									School server hostname
								</div>
								<div class="input">
									<input type="text" id="server_hostname" class="server_hostname" placeholder="Server hostname...">
								</div>
								<div class="clear"></div>
								<div class="label">
									Ancestor
								</div>
								<div class="input">
									<input type="text" id="ancestor" list="json-datalistancestor" placeholder="Ancestor...">
								</div>
								<datalist id="json-datalistancestor"></datalist>
								<div class="clear"></div>
							</div>
							<a class="button" id="AddPlace" data="" role="button">Agregar</a>
							<p id="alert">Rellene todos los campos!</p>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="openModal2" class="modalDialog">
	<div>
		<a id="CloseAddModal2"  class="close">X</a>
		<h3 id="change">Eliminar Usuario</h3>
		<div class="clear"></div>
		<div class="well clearfix" id="addUserForm">
			<form novalidate="novalidate" role="form">
				<fieldset>
					<div class="form-group">
						<div id="labelDelete" style="text-align:center">
							Esta seguro de eliminar los registros seleccionados?
						</div>
						<hr>
						<a style="margin-left: 10rem" class="button" id="confirmDelete" role="button">Si</a>
						<a class="button" id="cancelDelete" role="button">Cancelar</a>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>
{% endblock %}
{% block pageScripts %}
	<script src="{{ app.request.baseUrl }}/js/general.js"></script>
<script src="{{ app.request.baseUrl }}/js/places.js"></script>
{% endblock %}