{# extend the parent tpl #}
{% extends 'layout.twig' %}

{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Inventory' %}

{# Page specific css #}
{% block pageCss %}
	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/lijst.css" />
{% endblock %}
{% block pageContent %}
	{# Page specific content #}
	{% include  'menu.twig' %}
<div class="menu-right">
	<div class="top-menu">
	<h1><a href="{{ path('Inventory.places') }}">Places</a></h1>
	<a class="button" id="openAddModal"  role="button">Add</a>


		<div class="h_search">
			<form action="{{ baseUrl }}" method="GET" {{ form_enctype(filterform) }}  novalidate="novalidate" role="form">
				<h2 class="text-danger">{{ form_errors(filterform.genres)|striptags }}</h2>	
				{{ form_widget(filterform.genres, { 'attr': {'class': 'form-control'} })  }}
				{{ form_widget(filterform.searchstring, { 'attr': {'class': 'form-control'} }) }}
				<input type="hidden" id="filterform__token" name="filterform[_token]" value="45072b220b3b190f6f6d863b5cd2a0d55f523c54" />
				{{ form_widget(filterform._token) }}
				<input type="submit" class="btn btn-primary pull-right" value="Filter" />

			</form>
	</div>
</div>
<div class="overvieuw">
	<table class="responstable" id="table">
		<tr>
			<th>
				<input type="checkbox" id="chechallboxes" name="checkbox">   
			</th>
			<th>
				name
			</th>
			<th>
				place_type
			</th>
			<th>
				school server hostname
			</th>
			<th>
				edit
			</th>
			<th>
				delete
			</th> 
		</tr>
		{% for place in places %}
			<tr>
				<td>
	            	<input type="checkbox" id="{{ place.ider }}" name="checkbox">    
	        	</td>
				<td class="name">{{ place.name }}</td>
				<td class="place">{{ place.placename }}</td>
				<td class="status">{{ place.server_hostname }}</td>
				<td class="status displaynone">{{ place.ancestor_id }}</td>
				<td class="text-right">
					<a class="button Editplace" id="Editplace" data="{{ place.ider }}"  role="button">Edit</a>
				</td>
				<td class="text-right">
					<a class="button Deleteplace" id="Deleteplace" data="{{ place.ider }}" role="button">delete</a>
				</td>
			</tr>
		{% endfor %}
	</table>
	<a class="button" id="EditSelectedplaces" role="button">Edit selected</a>
    <a class="button" id="DeleteSelectedplaces" role="button">delete selected</a>
	<div class="center">
		<div class="pages">
			{% include  'pagination.twig' %}
		</div>
	</div>
		<div id="openModal" class="modalDialog">
			<div>
				<a id="CloseAddModal"  class="close">X</a>
				<h3 id="change">Add User</h3>
				<div class="clear"></div>
				<div class="well clearfix" id="addUserForm">
					<form novalidate="novalidate" role="form">
						<fieldset>
							<div class="form-group">
								<div class="label">
									Name
								</div>
								<div class="input">
									<input type="text" name="login" id="Name" value="" placeholder="Name...">
								</div>
								<div class="clear"></div>
								<div class="label">
									Place type
								</div>
								<div class="input">
									<input type="text" id="place_type" list="json-datalistplace_type" placeholder="Place type...">
								</div>
								<datalist id="json-datalistplace_type"></datalist>
								<div class="clear"></div>
								<div class="label">
									School server hostname
								</div>
								<div class="input">
									<input type="text" id="server_hostname" placeholder="Server hostname...">
								</div>
								<div class="clear"></div>
								<div class="label">
									Ancestor
								</div>
								<div class="input">
									<input type="text" id="ancestor" list="json-datalistancestor" placeholder="Ancestor...">
								</div>
								<datalist id="json-datalistancestor"></datalist>
								<div class="clear"></div>
							</div>
							<a class="button" id="AddPlace" data="" role="button">Add</a>
							<p id="alert">Fill in all fields!</p>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
{% block pageScripts %}
<script src="{{ app.request.baseUrl }}/js/places.js"></script>
{% endblock %}