	<![endif]-->

	<!-- jQuery & Bootstrap -->
	<script src="{{ app.request.baseUrl }}/assets/public/js/jquery-2.1.0.min.js"></script>
	<script src="{{ app.request.baseUrl }}/assets/public/js/bootstrap.min.js"></script>

	{% block js %}
	{% endblock %}

</head>
<body>

	<div class="container">
		<h1><a href="{{ app.request.baseUrl }}/">{{ pageTitle|raw }}</a></h1>
